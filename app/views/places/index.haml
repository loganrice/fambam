%div.container
  %div.row
    %div.col-xs-3
      %h2 Places
      %div.list-group
      - Image.tag_counts.each do |tag|
        = link_to tag.name, place_tag_path(tag.name), class: "list-group-item"
    %div.col-xs-9
      %h2 Photos
      %br
      - @images.each do |image|
        %div.col-lg-3.col-md-4.col-xs-6.thumb
          = link_to image_path(image), class: "thumbnail" do
            %img.img-responsive{"src" => "#{image.thumb_url}"}

